          <button type="button" id="sidebarCollapse" class="btn btn-info ">
            <i class="bi bi-arrow-bar-left"></i>
            <!-- <i><<<</i> -->
          </button>
      </nav>
      <form action="/admin/addblog" method="post" enctype="multipart/form-data">
        <!-- Text input -->
        <div class="form-outline mb-4">
          <input type="text" id="" name="blogtitle" class="form-control" required />
          <label class="form-label" for="form6Example3">Blog Title</label>
        </div>



        <!-- Select category of bloc -->
        <div class="form-group">
          <select class="form-control" name="blogcategory" id="exampleFormControlSelect1" required>
            <% category.forEach((row, index)=>{ %>
              <option value="<%= row._id %>"><%= row.categoryname %></option>
              <% }) %>
          </select>
          <label for="exampleFormControlSelect1">Select category</label>

        </div>
       
        <!-- Blog discription input -->
        <div class="form-outline mb-4">
          <textarea name="blogdiscription" class="form-control" id="form6Example7" rows="4" required></textarea>
          <label class="form-label" for="form6Example7">Blog Discription</label>
        </div>

        <input type="file" class="form-control form-control-lg" name="image" id="customFile" />
        <label class="form-label">Upload Blog Related Image</label><br><br>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Post Blog</button>
      </form>
    </div>
  </div>

