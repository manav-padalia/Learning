<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Link title icon -->
  <link rel="icon" href="https://revenuearchitects.com/wp-content/uploads/2017/02/Blog_pic.png" type="image/icon type">

  <!-- Link external CSS -->
  <link rel="stylesheet" href="/stylesheets/homestyle.css">

  <!-- Link bootstrap icons  -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

  <!-- Link bootstrap -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <title>Admin Panel</title>
</head>

<body>
  <!-- Left sidebar -->
  <div class="wrapper">
    <!-- Sidebar  -->
    <nav id="sidebar">
      <div class="sidebar-header"><a href="/admin" class="text-white">
          <h2>Blinging Blogs</h2>
        </a>
      </div>

      <ul class="list-unstyled components text-white">
        <!-- <p></p> -->
        <li>
          <a href="/admin" class="text-white m-2">All Blog</a>
        </li>

        <!-- Only for Admin -->
        <li>
          <a href="/admin/addblog" class="text-white m-2">Add New Blog</a>
        </li>


        <li>
          <a href="/admin/category" class="text-white m-2">All Categories</a>
        </li>


        <!-- Only for Admin -->
        <li>
          <a href="/admin/addcategory" class="text-white m-2">Add New Categories</a>
        </li>

      </ul>

      <ul class="list-unstyled CTAs">
        <li>
          <a href="/" class="download" target="_blank">Go to User panel</a>
        </li>
        <li>
          <a href="/logout" class="article">Logout</a>
        </li>
      </ul>
    </nav>

    <!-- Page Content with upper navbar  -->
    <div id="content">

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">

          <button type="button" id="sidebarCollapse" class="btn btn-info ">
            <i class="bi bi-arrow-bar-left"></i>
          </button>
      </nav>
      <h1>Welcome to our blinging blog admin panel.</h1>
      <div class="">
        <% if(blogs != '') { %>

        <table class="table table-hover md  align-items-center table-responsive-sm">
          <thead class="text-center">
            <tr class="bg-info text-white">
              <th class="col-1" scope="col">Id</th>
              <th>Blog Title & Discription</th>
              <th>Category</th>
            </tr>
          </thead>
          <tbody class="">
            <% blogs.forEach((row, index)=>{ %>


            <tr class=" align-items-center text-center">
              <td rowspan="2"> <%= index+1 %> </td>
              <td><%= row.blogtitle %></td>
              <td style="white-space: pre-wrap; word-wrap: break-word;"><%= row.blogcategory.categoryname %> </td>
            </tr>
            <tr>
              <td class="text-break">


                <pre style="font-family: 'Bitter', serif; font-size: larger; white-space: pre-wrap; word-wrap: break-word;">
                    <%= row.blogdiscription %>
                  </pre>

              </td>
              <td class=" align-items-center text-center"><a class="btn btn-success mb-1" href="/editblog/<%= row._id %> "><i class="bi bi-pencil-square"></i></a>
                <br><a class="btn btn-danger mb-1" href="/admin/delete/<%= row._id %>"> <i class="bi bi-trash2-fill"></i></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else{ %>
        <h1 class="text-center text-primary mt-5">No blogs found in database</h1>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="page-footer font-small text-white bg-secondary">

    <!-- Copyright -->
    <div class="footer-copyright text-center py-3">Â© 2023 Copyright:
      <a class="text-white" href="/admin"> Blinging Blogs</a>
    </div>
  </footer>
  <!-- Copyright -->

  <!-- jQuery CDN - Slim version (=without AJAX) -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <!-- Popper.JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
  <!-- Bootstrap JS -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

  <script type="text/javascript">
    $(document).ready(function() {
      $('#sidebarCollapse').on('click', function() {
        $('#sidebar').toggleClass('active');
      });
    });
  </script>


