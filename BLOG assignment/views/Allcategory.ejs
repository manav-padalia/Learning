  <title>All Category</title>
</head>

<body>
  <!-- Left sidebar -->
  <div class="wrapper">
    <!-- Sidebar  -->
    <nav id="sidebar">
      <div class="sidebar-header"><a href="/admin" class="text-white">
          <h2>Blinging Blogs</h2>
        </a>
      </div>

      <ul class="list-unstyled components text-white">
        <!-- <p></p> -->
        <li>
          <a href="/admin" class="text-white m-2">All Blog</a>
        </li>

        <!-- Only for Admin -->
        <li>
          <a href="/admin/addblog" class="text-white m-2">Add New Blog</a>
        </li>


        <li>
          <a href="/admin/category" class="text-white m-2">All Categories</a>
        </li>


        <!-- Only for Admin -->
        <li>
          <a href="/admin/addcategory" class="text-white m-2">Add New Categories</a>
        </li>

      </ul>

      <ul class="list-unstyled CTAs">
        <li>
          <a href="/" class="download" target="_blank">Go to User panel</a>
        </li>
        <li>
          <a href="/logout" class="article">Logout</a>
        </li>
      </ul>
    </nav>

    <!-- Page Content with upper navbar  -->
    <div id="content">

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">

          <button type="button" id="sidebarCollapse" class="btn btn-info ">
            <i class="bi bi-arrow-bar-left"></i>
            <!-- <i><<<</i> -->
          </button>
          
      </nav>
      <h1>All categories are here</h1>

      <% if(category!= ''){ %>
      <table class="table table-hover text-center mt-5">
        <thead>
          <tr class="bg-info text-white">
            <th scope="col">Id</th>
            <th scope="col">Category Name</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>

          <% category.forEach((row, index)=>{ %>
          <tr>
            <th scope="row"><%= index+1 %> </th>
            <td><%= row.categoryname %> </td>
            <td><a class="btn btn-success" href="/editcategory/<%= row._id %> "><i class="bi bi-pencil-square"></i></a></td>
            <td><a class="btn btn-danger" href="/delete/<%= row._id %>"> <i class="bi bi-trash2-fill"></i></a></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <%   }else{ %>
        <h1 class="text-center text-primary mt-5">No category found in database</h1>
  
        <% } %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="page-footer font-small text-white bg-secondary">

    <!-- Copyright -->
    <div class="footer-copyright text-center py-3">Â© 2023 Copyright:
      <a class="text-white" href="/"> Blinging Blogs</a>
    </div></footer>
    <!-- Copyright -->

    <!-- jQuery CDN - Slim version (=without AJAX) -->
