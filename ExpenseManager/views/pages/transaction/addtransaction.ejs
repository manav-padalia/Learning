<div class="container" style="margin-bottom: 50px;">
  <!--Content starts-->
  <br>
  <form class="container" action="/addtransaction/<%= acc.id %> " method="post">
    <label>Choose date of transaction</label>
    <input type="date" style="width: 140px;" name="date" id="" required>

    <label for="name">Type of transaction: </label>
    <select style="width: 250px;" class="form-select" aria-label="Default select example" id="select" name="type">
      <% for (let type of ['income', 'expense']) { %>
      <option value="<%= type %>" <%= (user.type === type) %>>
        <%= type %>
      </option>
      <% } %>
    </select>


    <!-- <select id="select" name="type">
    </select> -->
    <br>
    <!-- <div class="form-outline mt-3"> -->
    <label class="form-label" for="description">Description</label>
    <textarea class="form-control" id="description" rows="4" name="description" required></textarea>
    <!-- </div> -->
    <label for="amount">Amount in Rupees(₹)</label>
    <input class="text-black" style="border: 1px solid; max-width: 500px; height: 40px;" type="number" step="any" min="0" name="amount" id="amount" placeholder="Enter new account name" required><br>

    <label for="name">Owner</label>
    <select style="width: 250px;" name="createdby" id="select" class="form-select">
      <option>
        <%= owner.firstname %>
      </option>
    </select>
    <br><br>

    <button onclick="balance()" style="width: 150px; height: 40px;" class="btn btn-secondary" type="submit">Add</button>
    <div id="div"></div>

  </form>
  <!--Content ends-->
</div>


